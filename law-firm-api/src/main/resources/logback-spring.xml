<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- 定义日志文件的存储地址 -->
    <property name="LOG_HOME" value="./logs" />
    <property name="CHARSET" value="UTF-8" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n" />
    
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 输出格式 -->
            <pattern>${LOG_PATTERN}</pattern>
            <!-- 明确指定编码 -->
            <charset>${CHARSET}</charset>
        </encoder>
        <!-- 启用ANSI颜色支持 -->
        <withJansi>true</withJansi>
    </appender>
    
    <!-- 按照每天生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/law-firm-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件输出的文件名 -->
            <FileNamePattern>${LOG_HOME}/law-firm-api.%d{yyyy-MM-dd}.log</FileNamePattern>
            <!-- 日志文件保留天数 -->
            <MaxHistory>30</MaxHistory>
            <!-- 日志文件最大总大小 -->
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 输出格式 -->
            <pattern>${LOG_PATTERN}</pattern>
            <!-- 明确指定编码 -->
            <charset>${CHARSET}</charset>
        </encoder>
        <!-- 日志文件最大大小 -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
        <!-- 确保文件不会被锁定 -->
        <prudent>false</prudent>
        <!-- 立即刷新 -->
        <immediateFlush>true</immediateFlush>
    </appender>
    
    <!-- MyBatis日志配置 -->
    <logger name="org.mybatis" level="INFO" />
    <logger name="com.baomidou.mybatisplus" level="INFO" />
    
    <!-- 项目日志配置 -->
    <logger name="com.lawfirm" level="DEBUG" />
    
    <!-- 开发环境日志配置 -->
    <springProfile name="dev">
        <!-- 设置默认日志级别为DEBUG -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
        <!-- 应用程序日志设置为DEBUG级别 -->
        <logger name="com.lawfirm" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
    </springProfile>
    
    <!-- 生产环境日志配置 -->
    <springProfile name="prod">
        <!-- 设置默认日志级别为WARN -->
        <root level="WARN">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
        <!-- 应用程序日志设置为INFO级别 -->
        <logger name="com.lawfirm" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
    </springProfile>
    
    <!-- 测试环境日志配置 -->
    <springProfile name="test">
        <!-- 设置默认日志级别为INFO -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
        <!-- 应用程序日志设置为DEBUG级别 -->
        <logger name="com.lawfirm" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
    </springProfile>
    
    <!-- 默认日志配置（非特定环境） -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
    </springProfile>
</configuration> 