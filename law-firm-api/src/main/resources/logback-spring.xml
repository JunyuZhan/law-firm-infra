<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 引入Spring Boot默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- 控制台日志配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 文件日志配置 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>${LOG_FILE_MAX_SIZE:-10MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-30}</maxHistory>
            <totalSizeCap>${LOG_FILE_TOTAL_SIZE_CAP:-3GB}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 设置日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    
    <!-- 应用日志 -->
    <logger name="com.lawfirm" level="DEBUG" />
    
    <!-- 减少SpringDoc生成文档时的日志输出 -->
    <logger name="org.springdoc" level="WARN" />
    <logger name="io.swagger" level="WARN" />
    
    <!-- 减少一些不必要的日志 -->
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.hibernate" level="INFO" />
    <logger name="com.zaxxer.hikari" level="INFO" />
    <logger name="io.lettuce" level="INFO" />
    
    <!-- 禁用监控相关的详细日志 -->
    <logger name="com.lawfirm.system.service.impl.monitor" level="INFO" />
</configuration> 