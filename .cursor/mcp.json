{
  "mcpServers": {
    "filesystem": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "search": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-search"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "mysql": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "mysql-mcp-server",
        "mysql_mcp_server"
      ],
      "env": {
        "MYSQL_HOST": "localhost",
        "MYSQL_PORT": "3306",
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "Zjy-1314",
        "MYSQL_DATABASE": "law_firm"
      }
    },
    "browsermcp": {
      "command": "npx",
      "args": ["@browsermcp/mcp@latest"]
    },
    "apidocs": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-proxy"
      ],
      "env": {
        "TARGET_URL": "http://localhost:8080",
        "PROXY_PATH": "/api-docs"
      }
    }
  }
}