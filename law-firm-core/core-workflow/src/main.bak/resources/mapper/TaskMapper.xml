<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawfirm.model.workflow.mapper.TaskMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lawfirm.model.workflow.entity.base.ProcessTask">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="deleted" property="deleted" />
        <result column="task_no" property="taskNo" />
        <result column="task_name" property="taskName" />
        <result column="task_type" property="taskType" />
        <result column="process_id" property="processId" />
        <result column="process_no" property="processNo" />
        <result column="description" property="description" />
        <result column="handler_id" property="handlerId" />
        <result column="handler_name" property="handlerName" />
        <result column="handler_type" property="handlerType" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="due_time" property="dueTime" />
        <result column="status" property="status" />
        <result column="result" property="result" />
        <result column="comment" property="comment" />
        <result column="priority" property="priority" />
        <result column="prev_task_ids" property="prevTaskIds" />
        <result column="next_task_ids" property="nextTaskIds" />
        <result column="task_config" property="taskConfig" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time, update_time, create_by, update_by, deleted,
        task_no, task_name, task_type, process_id, process_no, description,
        handler_id, handler_name, handler_type, start_time, end_time, due_time,
        status, result, comment, priority, prev_task_ids, next_task_ids, task_config
    </sql>

    <!-- 根据流程ID查询任务 -->
    <select id="selectByProcessId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_task
        WHERE process_id = #{processId}
        AND deleted = 0
        ORDER BY create_time ASC
    </select>

    <!-- 查询用户的待办任务 -->
    <select id="selectTodoTasks" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_task
        WHERE handler_id = #{handlerId}
        AND status = 1 <!-- 进行中 -->
        AND deleted = 0
        ORDER BY priority DESC, due_time ASC, create_time ASC
    </select>

    <!-- 查询用户的已办任务 -->
    <select id="selectDoneTasks" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_task
        WHERE handler_id = #{handlerId}
        AND status = 2 <!-- 已完成 -->
        AND deleted = 0
        ORDER BY end_time DESC
    </select>

    <!-- 查询即将到期的任务 -->
    <select id="selectUpcomingTasks" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_task
        WHERE status = 1
        AND due_time IS NOT NULL
        AND due_time BETWEEN NOW() AND DATE_ADD(NOW(), INTERVAL #{hours} HOUR)
        AND deleted = 0
        ORDER BY due_time ASC
    </select>

    <!-- 统计任务状态分布 -->
    <select id="countByStatus" resultType="java.util.Map">
        SELECT
            status,
            COUNT(1) as count
        FROM workflow_task
        WHERE deleted = 0
        GROUP BY status
    </select>

    <!-- 查询超时任务 -->
    <select id="selectOverdueTasks" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_task
        WHERE status = 1
        AND due_time IS NOT NULL
        AND due_time &lt; NOW()
        AND deleted = 0
        ORDER BY due_time ASC
    </select>

</mapper> 