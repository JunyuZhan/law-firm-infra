<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawfirm.core.workflow.mapper.ProcessTemplateMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lawfirm.core.workflow.entity.ProcessTemplate">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="deleted" property="deleted" />
        <result column="key" property="key" />
        <result column="name" property="name" />
        <result column="version" property="version" />
        <result column="category" property="category" />
        <result column="description" property="description" />
        <result column="content" property="content" />
        <result column="process_definition_id" property="processDefinitionId" />
        <result column="deployment_id" property="deploymentId" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time, update_time, create_by, update_by, deleted,
        `key`, name, version, category, description, content,
        process_definition_id, deployment_id, status
    </sql>
    
    <!-- 根据模板标识查询最新版本的模板 -->
    <select id="selectLatestByKey" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_process_template
        WHERE `key` = #{key}
        AND deleted = 0
        ORDER BY version DESC
        LIMIT 1
    </select>
    
    <!-- 根据模板标识和版本号查询模板 -->
    <select id="selectByKeyAndVersion" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_process_template
        WHERE `key` = #{key}
        AND version = #{version}
        AND deleted = 0
    </select>
    
    <!-- 根据流程定义ID查询模板 -->
    <select id="selectByProcessDefinitionId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_process_template
        WHERE process_definition_id = #{processDefinitionId}
        AND deleted = 0
    </select>
    
    <!-- 根据部署ID查询模板 -->
    <select id="selectByDeploymentId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_process_template
        WHERE deployment_id = #{deploymentId}
        AND deleted = 0
    </select>
    
    <!-- 分页查询流程模板 -->
    <select id="selectPageByCondition" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM workflow_process_template
        <where>
            deleted = 0
            <if test="key != null and key != ''">
                AND `key` LIKE CONCAT('%', #{key}, '%')
            </if>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>
        </where>
        ORDER BY update_time DESC
    </select>
    
</mapper> 