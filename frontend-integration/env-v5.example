# Vue Vben Admin 5.0 环境配置
# 适配法律事务所管理系统

# 应用基本信息
VITE_APP_TITLE=法律事务所管理系统
VITE_APP_SHORT_NAME=法务管理
VITE_APP_VERSION=1.0.0

# 端口号 - Vue Vben Admin 5.0 默认开发端口
VITE_PORT=5666

# 后端API地址
VITE_GLOB_API_URL=http://localhost:8080
VITE_GLOB_API_URL_PREFIX=/api/v1

# 是否开启Mock数据
VITE_USE_MOCK=false

# 是否开启PWA
VITE_USE_PWA=false

# 路由历史模式 hash | memory | web
VITE_ROUTER_HISTORY=web

# 是否开启压缩
VITE_BUILD_COMPRESS=gzip

# 压缩算法 gzip | brotli | none
VITE_BUILD_COMPRESS_TYPE=gzip

# 是否删除console
VITE_DROP_CONSOLE=true

# 基础配置
VITE_BASE_URL=/

# 上传地址
VITE_GLOB_UPLOAD_URL=/api/v1/upload

# 图片前缀地址
VITE_GLOB_IMG_URL=http://localhost:8080

# 接口超时时间
VITE_GLOB_API_TIMEOUT=10000

# 是否开启跨域代理
VITE_USE_PROXY=true

# 代理配置
VITE_PROXY_CONFIG=[["api","http://localhost:8080"]]

# 是否开启Eslint
VITE_USE_ESLINT=true

# 是否开启package依赖分析可视化图
VITE_USE_BUNDLE_ANALYZER=false

# 预加载
VITE_USE_IMAGEMIN=true

# 是否兼容旧版浏览器
VITE_LEGACY=false

# 生产环境移除debugger
VITE_DROP_DEBUGGER=true

# 法律事务所特定配置
VITE_LAW_FIRM_NAME=XX律师事务所
VITE_LAW_FIRM_LOGO=/logo.png
VITE_LAW_FIRM_COPYRIGHT=© 2024 XX律师事务所 版权所有

# 系统功能开关
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_DOC_ANALYSIS=true
VITE_ENABLE_RISK_ASSESSMENT=true
VITE_ENABLE_AUTO_BACKUP=true

# 文件上传配置
VITE_MAX_FILE_SIZE=100
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# 安全配置
VITE_ENABLE_WATERMARK=true
VITE_SESSION_TIMEOUT=3600
VITE_MAX_LOGIN_ATTEMPTS=5 