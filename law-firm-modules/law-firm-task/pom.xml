<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.lawfirm</groupId>
        <artifactId>law-firm</artifactId>
        <version>${revision}</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>law-firm-task</artifactId>
    <name>law-firm-task</name>
    <description>任务管理模块</description>

    <dependencies>
        <!-- Task Model -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>task-model</artifactId>
        </dependency>

        <!-- Common Core -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>common-core</artifactId>
        </dependency>

        <!-- Common Web -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>common-web</artifactId>
        </dependency>

        <!-- Core Workflow -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-workflow</artifactId>
        </dependency>

        <!-- MyBatis Plus -->
        <dependency>
            <groupId>com.baomidou</groupId>
            <artifactId>mybatis-plus-boot-starter</artifactId>
        </dependency>

        <!-- Spring Boot Starter -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Lombok -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <!-- MapStruct -->
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mapstruct</groupId>
            <artifactId>mapstruct-processor</artifactId>
        </dependency>

        <!-- Validation -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Personnel Model -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>personnel-model</artifactId>
        </dependency>
        <!-- Case Model -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>case-model</artifactId>
        </dependency>
        <!-- Client Model -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>client-model</artifactId>
        </dependency>
        <!-- Organization Model -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>organization-model</artifactId>
        </dependency>

        <!-- Core Message -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-message</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>message-model</artifactId>
        </dependency>

        <!-- AI能力依赖 -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-ai</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>ai-model</artifactId>
        </dependency>
        <!-- 权限常量依赖 -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>auth-model</artifactId>
        </dependency>
    </dependencies>

</project>