        <artifactId>law-firm-modules</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>law-firm-knowledge</artifactId>

    <!-- No changes needed - dependencies already follow the requirements -->
    <dependencies>
        <!-- 知识模型依赖 -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>knowledge-model</artifactId>
            <version>${revision}</version>
        </dependency>
        
        <!-- 核心模块依赖 -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-audit</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-search</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-storage</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>core-message</artifactId>
            <version>${revision}</version>
        </dependency>
        
        <!-- 工具模块依赖 -->
        <dependency>
            <groupId>com.lawfirm</groupId>
            <artifactId>common-util</artifactId>
            <version>${revision}</version>
        </dependency>
        
