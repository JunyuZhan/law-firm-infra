<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawfirm.model.auth.mapper.LoginHistoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lawfirm.model.auth.entity.LoginHistory">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="ip" property="ip"/>
        <result column="location" property="location"/>
        <result column="browser" property="browser"/>
        <result column="os" property="os"/>
        <result column="status" property="status"/>
        <result column="msg" property="msg"/>
        <result column="login_time" property="loginTime"/>
        <result column="tenant_id" property="tenantId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, username, ip, location, browser, os, status, msg, login_time, tenant_id
    </sql>

    <!-- 根据ID查询登录历史 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_login_history
        WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询登录历史 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_login_history
        WHERE user_id = #{userId}
        ORDER BY login_time DESC
    </select>

    <!-- 根据IP地址查询登录历史 -->
    <select id="selectByIpAddress" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_login_history
        WHERE ip = #{ipAddress}
        ORDER BY login_time DESC
    </select>

    <!-- 分页查询登录历史 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_login_history
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="startTime != null">
                AND login_time >= #{startTime}
            </if>
            <if test="endTime != null">
                AND login_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY login_time DESC
        LIMIT #{pageSize} OFFSET #{pageNum}
    </select>

    <!-- 查询登录历史总数 -->
    <select id="selectCount" resultType="int">
        SELECT COUNT(*)
        FROM auth_login_history
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="startTime != null">
                AND login_time >= #{startTime}
            </if>
            <if test="endTime != null">
                AND login_time &lt;= #{endTime}
            </if>
        </where>
    </select>

    <!-- 新增登录历史 -->
    <insert id="insert" parameterType="com.lawfirm.model.auth.entity.LoginHistory">
        INSERT INTO auth_login_history (
            user_id, username, ip, location, browser, os, status, msg, login_time, tenant_id
        ) VALUES (
            #{userId}, #{username}, #{ip}, #{location}, #{browser}, #{os}, #{status}, #{msg}, #{loginTime}, #{tenantId}
        )
    </insert>

    <!-- 更新登录历史 -->
    <update id="update" parameterType="com.lawfirm.model.auth.entity.LoginHistory">
        UPDATE auth_login_history
        <set>
            <if test="ip != null">ip = #{ip},</if>
            <if test="location != null">location = #{location},</if>
            <if test="browser != null">browser = #{browser},</if>
            <if test="os != null">os = #{os},</if>
            <if test="status != null">status = #{status},</if>
            <if test="msg != null">msg = #{msg},</if>
            <if test="loginTime != null">login_time = #{loginTime}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除登录历史 -->
    <delete id="deleteById">
        DELETE FROM auth_login_history WHERE id = #{id}
    </delete>

    <!-- 根据用户ID删除登录历史 -->
    <delete id="deleteByUserId">
        DELETE FROM auth_login_history WHERE user_id = #{userId}
    </delete>

    <!-- 删除指定日期之前的登录历史 -->
    <delete id="deleteBeforeDate">
        DELETE FROM auth_login_history WHERE login_time &lt; #{date}
    </delete>

    <!-- 查询用户最后一次登录记录 -->
    <select id="selectLastLoginByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM auth_login_history
        WHERE user_id = #{userId}
        ORDER BY login_time DESC
        LIMIT 1
    </select>
</mapper>
