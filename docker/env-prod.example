# 生产环境配置示例文件
# 复制此文件为 .env.prod 并修改相应配置
# 使用方法: docker-compose --env-file .env.prod up

# 应用环境
SPRING_PROFILES_ACTIVE=prod
ENVIRONMENT=production

# 数据库配置
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=law_firm
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_secure_password_here

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0

# MinIO配置
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET=law-firm

# OnlyOffice配置
ONLYOFFICE_ENABLED=true
ONLYOFFICE_URL=http://onlyoffice:80
ONLYOFFICE_SECRET=lawfirm-onlyoffice-jwt-secret-prod-2024
ONLYOFFICE_HEADER=Authorization
ONLYOFFICE_CALLBACK_URL=http://api:8080/api/v1/documents/onlyoffice/callback
ONLYOFFICE_MAX_FILE_SIZE=104857600
ONLYOFFICE_EDIT_TIMEOUT=120
ONLYOFFICE_COEDIT_ENABLED=true
ONLYOFFICE_COEDIT_MAX_USERS=20
ONLYOFFICE_COEDIT_AUTO_SAVE_INTERVAL=30

# 文档配置
DOCUMENT_EDITOR_TYPE=ONLYOFFICE
DOCUMENT_EDIT_ENABLED=true

# 日志配置
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_SPRING=WARN
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=90
LOG_FILE_TOTAL_SIZE_CAP=10GB

# API文档配置 (生产环境建议禁用)
ENABLE_API_DOCS=false
SPRINGDOC_API_DOCS_ENABLED=false
SPRINGDOC_SWAGGER_UI_ENABLED=false
KNIFE4J_ENABLE=false

# 权限配置
PERMISSION_VALIDATE=true
PERMISSION_CACHE_ENABLED=true
PERMISSION_CACHE_TTL=7200
PERMISSION_CACHE_MAX_SIZE=20000
PERMISSION_MANAGEMENT_ENABLED=true

# JWT配置
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRATION=86400

# 跨域配置
CORS_ALLOWED_ORIGINS=https://your-domain.com
CORS_USE_WILDCARD=false

# 服务器配置
SERVER_PORT=80
CONTEXT_PATH=/ 