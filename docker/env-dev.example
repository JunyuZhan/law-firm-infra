# 开发环境配置示例文件
# 复制此文件为 .env.dev 并修改相应配置
# 使用方法: docker-compose --env-file .env.dev up

# 应用环境
SPRING_PROFILES_ACTIVE=dev
ENVIRONMENT=development

# 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=law_firm_dev
MYSQL_USERNAME=root
MYSQL_PASSWORD=dev_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# MinIO配置
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=law-firm-dev

# OnlyOffice配置
ONLYOFFICE_ENABLED=true
ONLYOFFICE_URL=http://onlyoffice:80
ONLYOFFICE_SECRET=lawfirm-onlyoffice-jwt-secret-dev
ONLYOFFICE_HEADER=Authorization
ONLYOFFICE_CALLBACK_URL=http://api:8080/api/v1/documents/onlyoffice/callback
ONLYOFFICE_MAX_FILE_SIZE=52428800
ONLYOFFICE_EDIT_TIMEOUT=60
ONLYOFFICE_COEDIT_ENABLED=true
ONLYOFFICE_COEDIT_MAX_USERS=5
ONLYOFFICE_COEDIT_AUTO_SAVE_INTERVAL=30

# 文档配置
DOCUMENT_EDITOR_TYPE=ONLYOFFICE
DOCUMENT_EDIT_ENABLED=true

# 日志配置
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SPRING=INFO
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30
LOG_FILE_TOTAL_SIZE_CAP=3GB

# API文档配置
ENABLE_API_DOCS=true
SPRINGDOC_API_DOCS_ENABLED=true
SPRINGDOC_SWAGGER_UI_ENABLED=true
KNIFE4J_ENABLE=true

# 权限配置
PERMISSION_VALIDATE=false
PERMISSION_CACHE_ENABLED=true
PERMISSION_CACHE_TTL=600
PERMISSION_CACHE_MAX_SIZE=5000
PERMISSION_MANAGEMENT_ENABLED=true 